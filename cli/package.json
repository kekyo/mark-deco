{
  "name": "mark-deco-cli",
  "version": "0.0.1",
  "description": "Command-line interface for mark-deco Markdown to HTML conversion processor",
  "keywords": [
    "markdown",
    "cli",
    "processor",
    "mark-deco",
    "oembed",
    "frontmatter"
  ],
  "author": "Kouji Matsui (@kekyo@mi.kekyo.net)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kekyo/mark-deco.git"
  },
  "homepage": "https://github.com/kekyo/mark-deco#readme",
  "readme": "README-pack.md",
  "bin": {
    "mark-deco-cli": "./dist/cli.cjs"
  },
  "main": "./dist/cli.cjs",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build",
    "build:esbuild": "esbuild src/cli.ts --bundle --platform=node --target=node18 --outfile=dist/cli-esbuild.js --format=cjs --minify",
    "test": "npm run build && vitest run",
    "pack": "npm run build && screw-up pack --pack-destination ../artifacts/"
  },
  "dependencies": {
    "commander": ">=12.0.0",
    "mark-deco": "*"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": ">=28.0.3",
    "@rollup/plugin-json": ">=6.1.0",
    "@rollup/plugin-node-resolve": ">=16.0.1",
    "@rollup/plugin-typescript": ">=12.1.2",
    "@types/node": ">=20.0.0",
    "esbuild": ">=0.21.5",
    "prettier-max": ">=1.9.0",
    "screw-up": ">=1.9.0",
    "rollup": ">=4.42.0",
    "tslib": ">=2.8.1",
    "typescript": ">=5.0.0",
    "vite": ">=6.3.5",
    "vitest": ">=1.0.0"
  }
}
