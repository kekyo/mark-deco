{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "skipLibCheck": true,
    "rootDir": ".",
    "types": [
      "vitest/globals",
      "node"
    ]
  },
  "include": [
    "tests/**/*",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "../cli",
    "../demo-pages",
    "../test-e2e",
    "../test-node",
    "../test-shared",
    "examples"
  ]
}
