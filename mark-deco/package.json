{
  "name": "mark-deco",
  "version": "0.0.1",
  "description": "Flexible Markdown to HTML conversion library",
  "keywords": [
    "markdown",
    "processor",
    "oembed",
    "frontmatter",
    "ast",
    "plugin"
  ],
  "author": "Kouji Matsui (@kekyo@mi.kekyo.net)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kekyo/mark-deco"
  },
  "homepage": "https://github.com/kekyo/mark-deco#readme",
  "readme": "README-pack.md",
  "type": "module",
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./browser": {
      "types": "./dist/browser.d.ts",
      "import": "./dist/browser.mjs",
      "require": "./dist/browser.cjs"
    },
    "./node": {
      "types": "./dist/node.d.ts",
      "import": "./dist/node.mjs",
      "require": "./dist/node.cjs"
    },
    "./misc": {
      "types": "./dist/misc.d.ts",
      "import": "./dist/misc.mjs",
      "require": "./dist/misc.cjs"
    }
  },
  "files": [
    "dist",
    "LICENSE"
  ],
  "scripts": {
    "dev": "npm run build",
    "build": "vite build",
    "test": "npm run build && vitest run",
    "update:providers": "curl -s https://oembed.com/providers.json | node -pe 'JSON.stringify(JSON.parse(require(\"fs\").readFileSync(0, \"utf8\")), null, 2)' > src/plugins/oembed/providers.json",
    "pack": "npm run build && screw-up pack --pack-destination ../artifacts/"
  },
  "dependencies": {
    "async-primitives": ">=1.5.0",
    "cheerio": ">=1.0.0",
    "js-beautify": ">=1.15.4",
    "js-yaml": ">=4.1.1",
    "jsdom": ">=26.1.0",
    "rehype-pretty-code": ">=0.14.0",
    "rehype-stringify": ">=10.0.0",
    "remark-gfm": ">=4.0.0",
    "remark-parse": ">=11.0.0",
    "remark-rehype": ">=11.0.0",
    "shiki": ">=3.21.0",
    "unified": ">=11.0.0",
    "unist-util-visit": ">=5.0.0"
  },
  "devDependencies": {
    "@playwright/test": ">=1.52.0",
    "@types/cheerio": ">=0.22.35",
    "@types/js-beautify": ">=1.14.3",
    "@types/js-yaml": ">=4.0.9",
    "@types/node": ">=20.0.0",
    "@vitest/coverage-v8": ">=1.0.0",
    "prettier-max": ">=1.13.0",
    "screw-up": ">=1.20.0",
    "typescript": ">=5.0.0",
    "vite": ">=6.3.5",
    "vite-plugin-dts": ">=4.5.4",
    "vitest": ">=1.0.0"
  }
}
